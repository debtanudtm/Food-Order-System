@model IEnumerable<Food_Order_System.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Item List</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Add New Item</a>
</p>
<div>
    <form asp-action="index">
        <input type="text" name="searchString" placeholder="Type Here To Search" value=@ViewBag.SearchText />
        <input type="submit" value="Search" />
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Price)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Item_image) *@
                <img src="~/Picture/@item.Item_image" height="100" width="100" class="Squre" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.Item_ID">Update</a> 
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Item_ID">Details</a> 
                    @* <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Item_ID">Delete</a> *@

                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Item_ID" Onclick="return confirm('Are you Sure Remove @item.Item_Name')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="alert-info" >
@TempData["Message"]
</div>


<div class="alert-info">
    @ViewBag.Message
</div>