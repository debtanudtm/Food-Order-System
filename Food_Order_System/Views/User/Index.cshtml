@model IEnumerable<Food_Order_System.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Item List</h1>

<div>
    <form asp-action="index">
        <input type="text" name="searchString" placeholder="Type here to search" />
        <input type="submit" value="Search" />
    </form>
</div>

<div class="alart-info">
    @TempData["Message"]

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Price)
            </td>
            <td>
               @*  @Html.DisplayFor(modelItem => item.Item_image) *@
                <img src="~/Picture/@item.Item_image" height="100" width="100" class="Squre" />
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                    <a asp-action="BuyNow" class="btn btn-outline-primary" asp-route-id="@item.Item_ID">Order Now</a>
            </td>
        </tr>
}
    </tbody>
</table>
