@model Food_Order_System.Models.User

@{
    ViewData["Title"] = "BuyNow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buy Now</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuyNow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email_ID" class="control-label"></label>
                <input asp-for="Email_ID" class="form-control" />
                <span asp-validation-for="Email_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContNo" class="control-label"></label>
                <input asp-for="ContNo" class="form-control" />
                <span asp-validation-for="ContNo" class="text-danger"></span>
            </div>
            <br />
            
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-info">Back to Item</a>
            </div>
        </form>
    </div>
</div>

